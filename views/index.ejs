<!doctype html>
<html>
  <head>
    <title>OMDB API Example</title>
  </head>
  <body>
    <!-- action is the URL we send our data to -->
    <!-- method is the HTTP verb (e.g., GET, POST) -->
    <form action="/search" method="GET">
      <label id="movietitle">Movie Title:</label>
      <input type="text" name="movieTitle" id="movieTitle">
      <input type="submit">
    </form>
  </body>
</html>
